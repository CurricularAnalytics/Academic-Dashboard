<div id='sign-in-form'>
	<%= form_for(:user, :url => session_path(:user)) do |f| %>
	  <div id='email' class='sign-in-field'>
			<%= f.label :email %><br />
	  	<%= f.email_field :email, autofocus: true %><br />
	    <%= f.check_box :remember_me %> 
			<%= f.label :remember_me, :id => 'remember-me-label' %>
		</div>

	  <div id='password' class='sign-in-field'>
			<%= f.label :password %><br />
	    <%= f.password_field :password, autocomplete: "off" %><br />
		  <%= link_to "Forgot your password?", new_password_path(:user) %>
		</div>

	  <div id='submit'><%= f.submit "Sign in" %></div>
	<% end %>
</div>

