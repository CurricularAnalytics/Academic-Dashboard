<div id="register">
	<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
		<h2>Sign up</h2>

		<ul id='sign-up-errors'>
			<% resource.errors.full_messages.each do |e| %>
				<li><%= e %></li>
			<% end %>
		</ul>
			
		<h3>User Information</h3>
		<div class='long-field'><%= f.label :email %>
		<%= f.email_field :email, autofocus: true %></div>

		<div class='short-field'><%= f.label :password %>
		<%= f.password_field :password, autocomplete: "off" %></div>

		<div class='short-field'><%= f.label :password_confirmation %>
		<%= f.password_field :password_confirmation, autocomplete: "off" %></div><br />

		<h3>Institution Information</h3>
		<%= fields_for :institution do |i| %>
			<div class="long-field">
				<%= i.label :name %>
				<%= i.text_field :name %>
			</div>
			<div class="short-field">
				<%= i.label :code %>
				<%= i.text_field :code %>
			</div>
			<!--<div class="field">
				<%= i.label :street %>
				<%= i.text_field :street %>
			</div>
			<div class="field">
				<%= i.label :address %>
				<%= i.text_field :address %>
			</div>
			<div class="field">
				<%= i.label :city %>
				<%= i.text_field :city %>
			</div>-->
			<div class="short-field">
				<%= i.label :zip %>
				<%= i.text_field :zip %>
			</div>
			<div class="long-field">
				<%= i.label :phone %>
				<%= i.text_field :phone %>
			</div>
		<% end %>

		<div id='sign-up-button'><%= f.submit "Sign up" %></div>
	<% end %>
</div>
